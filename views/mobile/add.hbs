<form action="/mobile/display" method="post">
    <h1>Add new mobile</h1>
    <div class="form-group">
        <label>BRAND</label>
        <select class="form-control" name="brand" id="" required>
            <option value="IP">IP</option>
            <option value="SS">SS</option>
            <option value="OPPO">OPPO</option>
            <option value="Xiaomi">Xiaomi</option>
        </select> 
    </div>
    <div class="form-group" style="margin-top:10px">
        <label for="">Model</label>
        <input type="text" name="model" placeholder="Enter model">
    </div>
    <div class="form-group" style="margin-top:10px"><label for="">Price</label>
        <input type="text" name="price" placeholder="Enter price">
    </div>
    <div class="form-group" style="margin-top:10px"><label for="">Quantity</label>
    <input type="number" name="quantity" placeholder="Enter quantity" min="1" max="100">
    </div>
    <div class="form-group" style="margin-top:10px"><label for="">Type</label>
        <input type="radio" name="type" id="" value="normal">Normal
        <input type="radio" name="type" id="" value="fold">Fold
    </div>
    <div class="form-group" style="margin-top:10px"><label for="">Image</label>
        <input type="url" name="image" id="" >
    </div>
    <div class="form-group" style="margin-top:10px">
        <input class="btn btn-primary" type="submit" value="Add">
        <input class="btn btn-primary" type="reset" value="Clear">
    </div>

</form>